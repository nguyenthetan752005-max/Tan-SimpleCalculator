<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/displayArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="#1E1E1E"
        android:orientation="vertical"
        android:gravity="end|bottom"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B0B0B0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1: Advanced Ops (Light Blue) -->
        <Button android:id="@+id/btnSqrt" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="√" android:backgroundTint="#B3E5FC" android:textColor="#000000"/>
        <Button android:id="@+id/btnSq" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="x²" android:backgroundTint="#B3E5FC" android:textColor="#000000"/>
        <Button android:id="@+id/btnPi" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="π" android:backgroundTint="#B3E5FC" android:textColor="#000000"/>
        <Button android:id="@+id/btnPercent" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="%" android:backgroundTint="#B3E5FC" android:textColor="#000000"/>

        <!-- Row 2: Control (Light Orange) & Div (Amber) -->
        <Button android:id="@+id/btnClear" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="C" android:backgroundTint="#FFAB91" android:textColor="#000000"/>
        <Button android:id="@+id/btnDelete" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="DEL" android:backgroundTint="#FFAB91" android:textColor="#000000"/>
        <Button android:id="@+id/btnSign" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="+/-" android:backgroundTint="#FFAB91" android:textColor="#000000"/>
        <Button android:id="@+id/btnDiv" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="/" android:backgroundTint="#FFE082" android:textColor="#000000"/>

        <!-- Row 3: Numbers (Light Green) & Mul (Amber) -->
        <Button android:id="@+id/btn7" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="7" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btn8" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="8" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btn9" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="9" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btnMul" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="x" android:backgroundTint="#FFE082" android:textColor="#000000"/>

        <!-- Row 4: Numbers (Light Green) & Sub (Amber) -->
        <Button android:id="@+id/btn4" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="4" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btn5" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="5" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btn6" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="6" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btnSub" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="-" android:backgroundTint="#FFE082" android:textColor="#000000"/>

        <!-- Row 5: Numbers (Light Green) & Add (Amber) -->
        <Button android:id="@+id/btn1" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="1" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btn2" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="2" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btn3" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="3" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btnAdd" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="+" android:backgroundTint="#FFE082" android:textColor="#000000"/>

        <!-- Row 6: 0 . (Light Green) & = (Blue) -->
        <Button android:id="@+id/btn0" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="0" android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button android:id="@+id/btnDot" android:layout_width="80dp" android:layout_height="70dp" android:layout_margin="2dp" android:text="." android:backgroundTint="#90EE90" android:textColor="#000000"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="2dp"
            android:text="="
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>